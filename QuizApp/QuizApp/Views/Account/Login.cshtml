@using System.Collections.Generic
@using System.Linq
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication
@using QuizApp.Data;
@using QuizApp.Models;
@using QuizApp.Models.ViewModels;
@model LoginViewModel

@{
    ViewData["Title"] = "Logga in";
}

<div class="jumbotron jumbotron-fluid">
    <div class="container">
        <h2>@ViewData["Title"]</h2>

        <div class="row">
            <div class="col-md-4">
                <section>
                    <form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                        <h4>Du måste logga in för att kunna använda detta quiz.</h4>
                        <hr />
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Email"></label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Password">Lösenord</label>
                            <input asp-for="Password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <div class="checkbox">
                                <label asp-for="RememberMe">
                                    <input asp-for="RememberMe" />
                                    Kom ihåg mig?
                                </label>
                            </div>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-default">Logga in</button>
                        </div>
                        <div class="form-group">
                            <p>
                                <a asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]">Registrera en ny användare?</a>
                            </p>
                        </div>
                    </form>
                </section>
            </div>

        </div>

    </div>
</div>
